@model Blog

@{
    Layout = "_DashBoard"; 
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Add Blog</span>
        </div>

        <div>
            <form method="post" asp-action="AddBlog" class="row"> 
                <div asp-validation-summary="All"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Blog Title</label>
                    <input type="text"
                           name="Title"
                           id="Title"
                           asp-for="Title"
                           class="form-control"
                           placeholder="">

                    <span asp-validation-for="Title" class="text-danger"></span>
                         
                </div>
               

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Blog Content</label>
                    <textarea type="text"
                              name="Content"
                              id="Content"
                              asp-for="Content"
                              class="form-control"
                              placeholder="">
                    </textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>


                <div class="mb-3 col-lg-6">
                    <label asp-for="TypeId" class="form-label">Category</label>
                    <select class="form-select" asp-for="TypeId" name="TypeId" id="TypeId">
                        <option value="0" selected>Select Category</option>
                        <option value="1">Fashion</option>
                        <option value="2">Travel</option>
                        <option value="3">Food</option>
                        <option value="4">Health</option>
                        <option value="5">Sport</option>
                        <option value="6">Comedy</option>
                    </select>

                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>

                <div class="col-lg-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

