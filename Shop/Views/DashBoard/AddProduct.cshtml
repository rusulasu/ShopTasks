@model Product // telling the model this form related for who

@{
    Layout = "_DashBoard"; // same main page layout
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form method="post" asp-action="AddProduct" class="row"> 
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input type="text"
                           name="Name"
                           id="Name"
                           asp-for="Name"
                           class="form-control"
                           placeholder="" />
                </div>
                <!-- asp-for="Name" to relate this input and label to "Name" attribute -->

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Product Description</label>
                    <textarea type="text"
                              name="Description"
                              id="Description"
                              asp-for="Description"
                              class="form-control"
                              placeholder=""></textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" class="form-label">Product Quantity</label>
                    <input type="number"
                           name="Quantity"
                           id="Quantity"
                           asp-for="Quantity"
                           class="form-control"
                           placeholder="">
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" class="form-label">Product Price</label>
                    <input type="number"
                           name="Price"
                           id="Price"
                           asp-for="Price"
                           class="form-control"
                           placeholder="">
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="EnableSize" class="form-check-input" type="checkbox" id="EnableSize" />
                        <label asp-for="EnableSize" class="form-check-label" for="EnableSize">Enable Product Size</label>
                    </div>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="CompanyId" class="form-label">Company</label>
                    <select class="form-select" asp-for="CompanyId" name="CompanyId" id="CompanyId">
                        <option selected>Select one</option>
                        <option value="1">Nike</option>
                        <option value="2">Adidas</option>
                    </select>
                </div>

                <div class="col-lg-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
