@model IEnumerable<Product>

@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">All Products</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="table-light">Id</th>
                    <th class="table-light">Name</th>
                    <th class="table-light">Description</th>
                    <th class="table-light">Price</th>
                    <th class="table-light">Quantity</th>
                    <th class="table-light">Sized</th>
                    <th class="table-light">Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.EnableSize</td>
                        <td>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"  role="button">
                                <!-- asp-route-id cause at Edit method should passing the id -->
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Delete
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
